<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="item" type="jjtelechea.dancelab.ui.events.model.Event"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_card"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="@color/primaryColor"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            app:strokeWidth="1dp"
            app:contentPadding="@dimen/card_horizontal_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/event_card_image" android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:src="@tools:sample/avatars"/>

            <TextView
                    android:paddingTop="@dimen/card_vertical_margin"
                    android:id="@+id/event_card_title" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_card_image"
                    tools:text="@tools:sample/lorem"
                    android:textStyle="bold"
                    android:text="@{item.title}"
                    android:textSize="@dimen/card_title_text_size"/>

            <TextView
                    android:id="@+id/event_card_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_card_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:autoLink="web"
                    tools:text="@tools:sample/lorem"
                    android:textSize="@dimen/card_body_text_size"
                    android:text="@{item.url}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>